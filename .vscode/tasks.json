{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build malloc_free/a",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "a",
                "*.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/malloc_free"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "build malloc_free/s",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "s",
                "*.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/malloc_free"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc générer le fichier actif",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ]
